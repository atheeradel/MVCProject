@model MVCProject.Models.Userinfo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
<h3>Details of Users and Chef</h3>
       
        <hr />
        <div class="card mb-3">
            @Html.DisplayFor(model => model.ImageFile)
            <img src=@Url.Content("~/Images/" + Model.ImagePath)
                 asp-append-version="true" style="border-radius:20%;" width="300px" height="200px" />
            <div class="card-body">
                <h5 class="card-title">Full Name:@Html.DisplayFor(model => model.Firstname) - @Html.DisplayFor(model => model.Lastname)</h5>
                <p class="card-text">Email: @Html.DisplayFor(model => model.Email)</p>
                <p class="card-text">Address:@Html.DisplayFor(model => model.Address)</p>
                <p class="card-text">Age:@Html.DisplayFor(model => model.Age)</p>
                <p class="card-text">Phone Number:@Html.DisplayFor(model => model.Phonenum)</p>
                <p class="card-text">Role:@Html.DisplayFor(model => model.Role.RoleName)</p>
            </div>
        </div>
<div>
    
  
</div>
<div>
            <a asp-action="Index" class="btn btn-sm hvr-hover bg-gradient-primary">Back to List</a>
</div>
</div></div>