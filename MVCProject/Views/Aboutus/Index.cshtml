@model IEnumerable<MVCProject.Models.Aboutu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["message"] != null)
{
    <script src="/lib/jquery//dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["message"]');
    </script>
}
<div class="main-panel">
    <div class="content-wrapper">
<h1 style="font-family:'Times New Roman', Times, serif">Index</h1>

<p>
            @* <a asp-action="Create" class=" btn btn-sm bg-gradient-primary">Create New</a> *@
</p>
<table class="table" id="example">
    <thead>
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.Aboutusmainimg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aboutusdescription)
            </th>
          
            <th>
                Control
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                            <img src=@Url.Content("~/Images/" + @item.Aboutusmainimg)
                                 asp-append-version="true" style="border-radius:20%;" width="300px" height="200px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aboutusdescription)
            </td>
          
            <td>
                            <a asp-action="Edit" asp-route-id="@item.AboutId" class=" btn btn-sm bg-gradient-primary">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.AboutId" class=" btn btn-sm bg-gradient-primary">Details</a> |
                           @*  <a asp-action="Delete" asp-route-id="@item.AboutId" class=" btn btn-sm bg-gradient-primary">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
</div></div>