@model MVCProject.Models.Recipe

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ChefIayout.cshtml";
}

<style>
    dl,dt{
        font-size:18px;
    }
</style>
<h1 class="mb-5 mt-5" style="text-align:center;">Details Of Recipe</h1>

<div >
   
    <hr />
    <section class="intro">
        <div>

            <div class="mask d-flex align-items-center h-100">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-10">
                            <div class="card" style="border-radius: 1rem;">
                                <div class="card-body p-5">

                                    <h1 class="mb-5 text-center"> <img src="~/Home/images/Recipe-removebg-preview.png" class="logo" width="230px" height="160px" alt=""> </h1>

                                    <dl class="row m-5" >
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Name)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Price)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Price)$
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Ingrediants)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Ingrediants)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Instruction)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Instruction)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Dateadd)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Dateadd)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Image)
                                        </dt>
                                        <dd class="col-sm-10">
                                            <img src=@Url.Content("~/Images/" + @Model.Image)
                                                 asp-append-version="true" width="200px" height="150px" />
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Status)
                                        </dt>
                                        <dd class="col-sm-10">


                                            @if (@Model.Status == 2)
                                            {
                                                <h4>Pending</h4>
                                            }
                                            @if (@Model.Status == 1)
                                            {
                                                <h4>Accepted</h4>
                                            }
                                            @if (@Model.Status == 0)
                                            {
                                                <h4>Rejected</h4>
                                            }
                                        </dd>
                                        <dt class="col-sm-2">
                                            Category Name
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Cat.CatName)
                                        </dd>


                                    </dl>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    </div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.RecId" class="btn hvr-hover btn-rounded btn-lg m-5">Edit</a>
    <a asp-action="ChefIndex" class="btn hvr-hover btn-rounded  m-5" asp-controller="Home">Back to Home</a>

</div>
