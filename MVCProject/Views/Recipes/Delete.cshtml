@model MVCProject.Models.Recipe

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ChefIayout.cshtml";
}

<style>
    dl, dt {
        font-size: 18px;
    }
</style>
<h1 class="mb-5 mt-5" style="text-align:center;">Delete Recipe</h1>

<h3 class="mb-5 mt-5">Are you sure you want to delete this?</h3>
<section class="intro">
    <div>

        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="card-body p-5">

                                <h1 class="mb-5 text-center"> <img src="~/Home/images/Recipe-removebg-preview.png" class="logo" width="230px" height="160px" alt=""> </h1>

                                <div>
                                    <h4>Recipe</h4>
                                    <hr />
                                    <dl class="row mb-5 mt-5">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Name)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Price)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Price)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Ingrediants)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Ingrediants)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Instruction)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Instruction)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Dateadd)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Dateadd)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Image)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Image)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Status)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Status)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Cat)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Cat.CatId)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.User)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.User.UserId)
                                        </dd>
                                    </dl>

                                    <form asp-action="Delete">
                                        <input type="hidden" asp-for="RecId" />
                                        <input type="submit" value="Delete" class="btn btn-danger" /> |

                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<a asp-action="ChefIndex" class="btn hvr-hover btn-rounded  m-5" asp-controller="Home">Back to Home</a>

