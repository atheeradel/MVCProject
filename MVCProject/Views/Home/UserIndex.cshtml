                            <a asp-action="logout" asp-controller="Home" class="btn hvr-hover" style="color:white">LOG-OUT</a>
                        </div>


                    </div>
                    <div class="text-slid-box">
                        <div id="offer-box" class="carouselTicker">
                            <ul class="offer-box">
                                <li>
                                    <i class="fab fa-opencart"></i>@ViewBag.one
                                </li>
                                <li>
                                    <i class="fab fa-opencart"></i>@ViewBag.two
                                </li>

                                <li>
                                    <i class="fab fa-opencart"></i>@ViewBag.three
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Main Top -->
    <!-- Start Main Top -->
    <!-- End Main Top -->
<header class="main-header">
    <!-- Start Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default bootsnav">
        <div class="container">
            <!-- Start Header Navigation -->
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                    <img src=@Url.Content("~/img/" + @ViewBag.logo)
                         asp-append-version="true" class="logo" width="230px" height="160px" alt="" />
            </div>
            <!-- End Header Navigation -->
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-menu">
                <ul class="nav navbar-nav ml-auto" data-in="fadeInDown" data-out="fadeOutUp">
                        <li class="nav-item active"><a class="nav-link" asp-action="UserIndex" asp-controller="Home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="aboutususer" asp-controller="Home">About Us</a></li>

                    <li class="nav-item"><a class="nav-link" asp-action="searchrecipe" asp-controller="Home">Recipes</a></li>
                    <li class="dropdown">
                        <a href="#" class="nav-link dropdown-toggle arrow" data-toggle="dropdown">SHOP</a>
                        <ul class="dropdown-menu">
                            
                            <li><a asp-action="WhishIndex" asp-controller="Home" asp-route-id="@Model.UserId">Wishlist</a></li>
                            <li><a asp-action="testimonal" asp-controller="Home">Testimonal</a></li>
                            <li><a asp-action="userorder" asp-controller="Home"> My Order</a></li>
                            



                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="#category">Recipe Category</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="contactus" asp-controller="Home">Contact Us</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <!-- Start Atribute Navigation -->
            <div class="attr-nav">
                <i class="fa fa-user s_color ">@Model.Firstname @Model.Lastname</i>
                




            </div>
            <!-- End Atribute Navigation -->
        </div>

    </nav>
    <!-- End Navigation -->
</header>
<!-- Start Slider -->

    <div id="slides-shop" class="cover-slides">
        <ul class="slides-container">
            @foreach (var item in @ViewBag.img)
            {
                if (@item.PageId == 9 || @item.PageId == 14 || @item.PageId == 23)
                {
                    <li class="text-center">
                        <img src=@Url.Content("~/img/" + @item.Imglogo)
                             asp-append-version="true" width="230px" height="160px" alt="" />
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <h1 class="m-b-20"><strong>@ViewBag.des</strong></h1>
                                    <p class="m-b-40">Discover our recipe for differant chef <br> around all the world </p>
                                    <p><a class="btn hvr-hover" asp-action="searchrecipe">Discover Now </a></p>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            }


        </ul>
        <div class="slides-navigation">
            <a href="#" class="next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
            <a href="#" class="prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
        </div>
    </div>
<!-- End Slider -->
<!-- Start Categories  -->
<h1 style="text-align:
center; margin:30px" id="category">
    Recipe Category
</h1>
<div class="categories-shop" >
    <div class="container">
        <div class="row">
            @foreach (var item in ViewBag.category)
            {
                  <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="shop-cat-box" data-aos="fade-right">
                        <img class="img-fluid " src=@Url.Content("~/Images/" + @item.CatImg)
                                       asp-append-version="true"  class="img-fluid" style="width: 400px; height:200px;"  />

                        <a class="btn hvr-hover"  asp-action="getrecipebycategory" asp-route-id="@item.CatId">@item.CatName recipe </a>
                        
                </div>
            </div>
            }
          
           
        </div>
    </div>
</div>
<!-- End Categories -->

    <div class="box-add-products">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12" data-aos="fade-up-right">
                    <div class="offer-box-products">
                        <img src=@Url.Content("~/img/" + @ViewBag.rc)
                             asp-append-version="true" class="img-fluid" width="600px" height="500px" alt="" />
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12" data-aos="fade-up-left">
                    <div class="offer-box-products">
                        <img src=@Url.Content("~/img/" + @ViewBag.cr)
                             asp-append-version="true" class="img-fluid" width="600px" height="500px" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- Start Products  -->
<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>  Recipe Food </h1>
                    <p>The most important famous recipes with a delicious taste from various skilled chefs</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <button class="active" data-filter="*">Show Recipe</button>
                        
                        <button data-filter=".best-seller">Hide Recipe</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row special-list">
            @foreach (var item in ViewBag.recipe)
            {
                    <div class="col-lg-3 col-md-6 special-grid top-featured" data-aos="flip-left" data-aos-duration="10000">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <div class="type-lb">
                                <p class="new">New</p>
                            </div>
                            <img class="img-fluid " src=@Url.Content("~/Images/" + @item.Image)
                                 asp-append-version="true" class=" img-fluid" style="width: 400px; height:250px" />
                            <div class="mask-icon">
                                <ul>
                                    <li><a asp-action="ViewRecipes" asp-route-id="@item.RecId" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>

                                    <li><a asp-action="Addwishlist" asp-route-id="@item.RecId" asp-controller="Home" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i class="far fa-heart"></i></a></li>
                                </ul>

                            </div>
                        </div>
                        <div class="why-text">
                            <h4>@item.Name</h4>
                            <h5> $@item.Price</h5>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</div>
<!-- End Products  -->
