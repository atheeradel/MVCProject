<!-- End Products  -->

<!-- chef section -->
<div class="row my-4">
    <div class="col-12">
        <h2 class="noo-sh-title " style="text-align:center;">Meet Our Chef</h2>
    </div>
    @foreach (var item in ViewBag.chef)
    {

        <div class="col-sm-6 col-lg-3">
            <div class="hover-team">
                <div class="our-team">
                    <img src=@Url.Content("~/Images/" + @item.ImagePath)
                         asp-append-version="true" img-fluid" style="width: 400px; height:400px" />
                    <div class="team-content">
                        <h3 class="title">@item.Firstname @item.Lastname</h3> <span class="post">@item.Email</span>
                    </div>
                    <ul class="social">
                        <li>

                            <a asp-route-id="@item.UserId" asp-action="getrecipebychef" class="fa fa-plus"></a>
                        </li>
                       
                    </ul>
                    <div class="icon"> <i class="fa fa-plus" aria-hidden="true"></i> </div>
                </div>
                <div class="team-description">
                </div>
                <hr class="my-0">
            </div>
        </div>
    }

</div>
