@model Userinfo
@{
    Layout = "~/Views/Shared/_Homeindex.cshtml";
}

    <!-- Start Main Top -->
    <div class="main-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="custom-select-box">
                        <select id="basic" class="selectpicker show-tick form-control" data-placeholder="$ USD">

                            <option>$ USD</option>

                        </select>
                    </div>
                    <div class="right-phone-box">
                        <p>Call US :- <a href="#"> @ViewBag.phone</a></p>
                    </div>
                    <div class="our-link">
                        <ul>
                            <li><a asp-action="UserProfile" asp-controller="Home"><i class="fa fa-user s_color"></i> My Account</a></li>

                            <li><a asp-action="contactus" asp-controller="Home"><i class="fas fa-headset"></i> Contact Us</a></li>
                            <li><a asp-action="UserIndex" asp-controller="Home"><i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp; Home</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="login-box">
