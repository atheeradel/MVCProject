@model IEnumerable<MVCProject.Models.Testimonal>
@{
    Layout = "~/Views/Shared/_Cheftest.cshtml";
}
<!-- Page Header Start -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Testimonial</h1>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="ChefIndex">Home</a></li>
                    <li class="breadcrumb-item active"> Testimonal </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Page Header End -->
<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="section-title text-center">
            <h1 class="display-5 mb-5">Testimonial</h1>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var item in Model)
            {
                <div class="testimonial-item text-center">
                    <img src=@Url.Content("~/Images/" +@Html.DisplayFor(modelItem => item.User.ImagePath) )
                         asp-append-version="true"
                         class=" img-fluid" style="width: 90px; height: 90px;">
                    <div class="testimonial-text text-center p-4">
                        <p>@Html.DisplayFor(modelItem => item.Msg)</p>
                        <h5 class="mb-1"> @Html.DisplayFor(modelItem => item.User.Firstname)-@Html.DisplayFor(modelItem => item.User.Lastname)</h5>
                        <span class="fst-italic">Our Clients</span>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
<!-- Testimonial End -->
