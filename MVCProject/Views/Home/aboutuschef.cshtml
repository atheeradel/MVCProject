@{
    Layout = "~/Views/Shared/_ChefIayout.cshtml";
}
<!-- Start All Title Box -->
<div class="all-title-box" style="background-image:url('/Home/images/master.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>ABOUT US</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="ChefIndex">Home</a></li>
                    <li class="breadcrumb-item active">ABOUT US</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start About Page  -->
<div class="about-box-main">
    @foreach (var item in ViewBag.aboutus)
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="banner-frame">
                        <img src=@Url.Content("~/Images/" + @item.Aboutusmainimg)
                             asp-append-version="true" style="border-radius:20%;" width="500px" height="400px" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <h2 class="noo-sh-title-top">We are <span>MasterChef</span></h2>
                    <p>
                        @item.Aboutusdescription<br />
                        @item.Trustedinfo
                        @item.Profinfo
                        @item.Expertinfo

                    </p>
                    <p></p>

                </div>
            </div>
            <div class="row my-5">
                <div class="col-sm-6 col-lg-4">
                    <div class="service-block-inner">
                        <h3>We are Trusted</h3>
                        <p> @item.Trustedinfo </p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="service-block-inner">
                        <h3>We are Professional</h3>
                        <p> @item.Profinfo</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="service-block-inner">
                        <h3>We are Expert</h3>
                        <p>@item.Expertinfo</p>
                    </div>
                </div>
            </div>

        </div>
    }

</div>
<!-- End About Page -->
