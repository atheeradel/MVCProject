@model Login

@{
    Layout = "~/Views/Shared/_ChefIayout.cshtml";
}
<style>

    .intro {
        margin-top: 100px;
        margin-bottom: 100px;
    }
</style>
<section class="intro">
    <div>

        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="card-body p-5">

                                <h1 class="mb-5 text-center">Change your login info</h1>

                                <form asp-action="changechef" asp-controller="Home" method="post" enctype="multipart/form-data">
                                    <input type="hidden" asp-for="LogId" />
                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    <div class="row">
                                        <div class="col-12 col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form6Example1">User Name</label>
                                                <input name="Username" type="text" id="form6Example1" class="form-control" required />

                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form6Example2">Change Password</label>
                                                <input name="pass" type="password" id="form6Example2" class="form-control" reguired />

                                            </div>
                                        </div>
                                    </div>









                                    <!-- Submit button -->
                                    <button type="submit" class="btn hvr-hover btn-rounded btn-block">Change </button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>